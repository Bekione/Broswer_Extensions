{
    "name": "JSON Prettifier",
    "version": "1.0",
    "description": "A browser extension that prettifies or format JSON data. Developed by Bereket Kinfe",
    "manifest_version": 3,
    "icons": {
      "16": "./assets/JP-Logo-16x16.png",
      "32": "./assets/JP-Logo-32x32.png",
      "48": "./assets/JP-Logo-48x48.png",
      "128": "./assets/JP-Logo-128x128.png"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "host_permissions": [
      "*://*/*"
    ],
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "popup.js"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
}